	</parent>
	
	<groupId>skyjo</groupId>
	<artifactId>skyjo.api</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>skyjo.api</name>
	<description>API project</description>
	<packaging>jar</packaging>
	
	<properties>
		<java.version>17</java.version>
	</properties>
	
	<dependencies>
		<!-- Projets -->
		<dependency>
            <groupId>skyjo</groupId>
            <artifactId>skyjo.core</artifactId>
            <version>0.0.1-SNAPSHOT</version>
			<scope>compile</scope>
        </dependency>
		<dependency>
            <groupId>skyjo</groupId>
            <artifactId>skyjo.application</artifactId>
            <version>0.0.1-SNAPSHOT</version>
			<scope>compile</scope>
        </dependency>
		<dependency>
            <groupId>skyjo</groupId>
            <artifactId>skyjo.infrastructure</artifactId>
            <version>0.0.1-SNAPSHOT</version>
